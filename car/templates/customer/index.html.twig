{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-3 text-center">
  <a class="btn btn-outline-primary" href="{{ path('customer_new') }}">Create new customer</a>
  <br>
  <h3 class="text text-center mt-4">Part list</h3>
  <table class="table table-bordered text-center">
    <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Birthdate</th>
      <th>Young Driver</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for customer in customers %}
      <tr>
        <td><a href="{{ path('customer_show', { 'id': customer.id }) }}">{{ customer.id }}</a></td>
        <td>{{ customer.name }}</td>
        <td>{{ customer.birthdate | date ('d/m/Y') }}</td>
        <td> 
           {% if customer.isYoungDriver == 1 %}
               True
           {% else %}
               False
           {% endif %}
        </td>
        <td>
          <a href="{{ path('customer_show', { 'id': customer.id }) }}">Show</a><br>
          <a href="{{ path('customer_edit', { 'id': customer.id }) }}">Edit</a><br>
          <a href="{{ path('customer_delete', { 'id': customer.id }) }}">Delete</a><br>  
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
