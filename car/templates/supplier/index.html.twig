{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-3 text-center">
  <a class="btn btn-outline-primary" href="{{ path('supplier_new') }}">Create new supplier</a>
  <br>
  <h3 class="text text-center mt-4">Supplier list</h3>
  <table class="table table-bordered text-center">
    <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Importer</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for supplier in suppliers %}
      <tr>
        <td><a href="{{ path('supplier_show', { 'id': supplier.id }) }}">{{ supplier.id }}</a></td>
        <td>{{ supplier.name }}</td>      
        <td>
          {% if supplier.isImporter == 1 %}
              True 
          {% else %}
              False
          {% endif %}
        </td>
        <td>      
          <a href="{{ path('supplier_show', { 'id': supplier.id }) }}">Show</a><br>
          <a href="{{ path('supplier_edit', { 'id': supplier.id }) }}">Edit</a><br>
          <a href="{{ path('supplier_delete', { 'id': supplier.id }) }}">Delete</a><br>  
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}
