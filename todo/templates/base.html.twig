<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Todo App {% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css')}}">
            <link rel="stylesheet" href="{{ asset('css/mystyle.css')}}">

        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block navigation %}
        <nav class="navbar navbar-expand navbar-light bg-light">
            <div class="nav navbar-nav">
                <h4><a class="nav-item nav-link text text-danger" href=" {{ path('home') }} ">Homepage </a></h4>
                <h4><a class="nav-item nav-link text text-success" href=" {{ path('todo_index') }}">Todo List</a></h4>
                <h4><a class="nav-item nav-link text text-success" href=" {{ path('todo_add') }}">Add Todo</a></h4>
                <h4><a class="nav-item nav-link text text-primary" href=" {{ path('person_index') }}">Person List</a></h4>
                <h4><a class="nav-item nav-link text text-primary" href=" {{ path('person_add') }} ">Add Person</a></h4>
            </div>
        </nav>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
