{% extends "base.html.twig" %}
{% block body %}
<div class="container-fluid col-md-5 text-center mt-3">
   <h1 class="text text-bg-success mt-2"> Edit Todo </h1>
   <div class="container-md border bg-light mt-2">
     {{ form_start (todoForm)}}
      <div class="form-group">
         <label for="name" class="text text-bg-primary">Todo Title </label>
         {{ form_widget (todoForm.name, {
            'attr' : {
               'class' : 'form-control',
            }
         })}}
      </div>
      <div class="form-group">
         <label for="name" class="text text-bg-success">Todo Description </label>
         {{ form_widget (todoForm.description, {
            'attr' : {
               'class' : 'form-control',
            }
         })}}
      </div>
       <div class="form-group">
         <label for="name" class="text text-bg-warning">Todo Type </label>
         {{ form_widget (todoForm.category, {
            'attr' : {
               'class' : 'form-control',
            }
         })}}
      </div>
       <div class="form-group">
         <label for="name" class="text text-bg-info">Todo Priority </label>
         {{ form_widget (todoForm.priority, {
            'attr' : {
               'class' : 'form-control',
            }
         })}}
      </div>
       <div class="form-group">
         <label for="name" class="text text-bg-secondary">Todo Deadline </label>
         {{ form_widget (todoForm.duedate, {
            'attr' : {
               'class' : 'form-control',
            }
         })}}
      </div>
      <div class="form-group">
         <label for="name" class="text text-bg-black">Person Name </label>
         {{ form_widget (todoForm.person, {
            'attr' : {
               'class' : 'form-control',
            }
         })}}
      </div>
     {{ form_end (todoForm)}}
   </div>
</div>
{% endblock %}